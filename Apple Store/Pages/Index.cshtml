@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
.first-section-background {
    background-image: url('css/images/background.png'); 
    background-size: cover;       
    background-position: center;  
    background-repeat: no-repeat; 
   }
    .product-nav-container {
        padding: 15px 0;
        width: 100%;
    }

    .product-list {  
        display: flex;
        justify-content: space-around;
        list-style: none; 
        margin: 0;
        padding: 0;
        max-width: 1100px;
        margin-left: auto;
        margin-right: auto;
    }

    .product-link {

        display: flex;
        flex-direction: column;
        align-items: center;
        text-decoration: none;
    }

    .product-image {
        height: 60px; 
        width: auto;
        margin-bottom: 5px; 
    }

    .product-name {
        font-size: 12px;
    }
</style>

<div class="first-section-background">
    <div class="text-center p-5">
        <h1 class="display-4 text-black">Welcome to Apple Store</h1>
        <p class="text-black-50">Learn about our amazing products.</p>
    </div>
</div>

<div class="product-nav-container" style="margin-top:50px;">
    <ul class="product-list">
        <li class="product-item">
            <a href="#" class="product-link">
                <img src="css/images/mac.png" alt="Mac" class="product-image">
                <span class="product-name" style="color:gray">Mac</span>
            </a>
        </li>

        <li class="product-item">
            <a href="#" class="product-link">
                <img src="css/images/iphone.png" alt="iPhone" class="product-image">
                <span class="product-name" style="color:gray">iPhone</span>
            </a>
        </li>

        <li class="product-item">
            <a href="#" class="product-link">
                <img src="css/images/ipad.png" alt="iPhone" class="product-image">
                <span class="product-name" style="color:gray">iPad</span>
            </a>
        </li>

        <li class="product-item">
            <a href="#" class="product-link">
                <img src="css/images/iwatch.png" alt="iPhone" class="product-image">
                <span class="product-name" style="color:gray">Watch</span>
            </a>
        </li>
    </ul>
</div>

<section class="latest-shop-section">
    <h2 class="section-title">Shop the Latest</h2>
    <p class="section-subtitle">Explore the revolutionary of iPhone 17 series.</p>

    <div class="product-grid">

        <div class="product-card">
            <img src="css/images/orange.png" alt="iPhone 17 Pro Max Silver" class="product-image" />
            <h3 class="product-name">iPhone 17 Pro Max</h3>
            <p class="product-desc">The ultimate iPhone experience. Featuring the new A-Series chip and ProRes video.</p>
            <a href="#" class="shop-link">Learn More &gt;</a>
        </div>

        <div class="product-card">
            <img src="css/images/gray.png" alt="iPhone 17 Pro Orange" class="product-image" />
            <h3 class="product-name">iPhone 17 Pro</h3>
            <p class="product-desc">Capture the impossible with the new 48MP Pro Camera System on all three lenses.</p>
            <a href="#" class="shop-link">Shop Now &gt;</a>
        </div>

        <div class="product-card">
            <img src="css/images/black.png" alt="iPhone 17 Dark Blue" class="product-image" />
            <h3 class="product-name">iPhone 17 in Dark Blue</h3>
            <p class="product-desc">A beautiful new design with a durable matte finish. Powerfully simple.</p>
            <a href="#" class="shop-link">View Colors &gt;</a>
        </div>

    </div>
</section>

<section class="details-section">
    <h2 class="section-title">iPhone 17: See Every Detail</h2>

    <div class="feature-module reverse">
        <div class="feature-content">
            <h3 class="feature-headline">The Pro Camera System. Elevated.</h3>
            <p class="feature-body">
                Experience a generational leap in mobile photography. The new triple-camera setup features 48MP resolution on all lenses, capturing unbelievable detail, especially in low light.
            </p>
            <ul>
                <li> 48MP Ultra-Wide, Wide, and Telephoto lenses</li>
                <li> Enhanced sensor-shift OIS</li>
                <li> Next-gen Photonic Engine processing</li>
            </ul>
        </div>
        <div class="feature-image-container">
            <img src="css/images/orange17.jpg" alt="48MP Camera Detail" class="feature-image" />
        </div>
    </div>

    <div class="feature-module">
        <div class="feature-content">
            <h3 class="feature-headline">A-Series Chip. Unstoppable Power.</h3>
            <p class="feature-body">
                The all-new A-Series chip delivers performance never before seen in a smartphone. From demanding professional apps to console-quality gaming, everything is faster, smoother, and more power-efficient.
            </p>
            <ul>
                <li>New 6-core CPU with efficiency cores</li>
                <li> Ray Tracing enabled GPU</li>
                <li>All-day battery life</li>
            </ul>
        </div>
        <div class="feature-image-container">
            <img src="css/images/iphone17black.jpg" alt="iPhone 17 Design" class="feature-image" />
        </div>
    </div>
</section>

