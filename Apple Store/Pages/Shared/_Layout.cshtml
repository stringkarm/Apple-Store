<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Apple_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Apple_Store.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container" >
                <a href="/" class="logo-link">
                    <img src="css/images/apple.png" alt="Company Logo" class="navbar-logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                        <ul class="navbar-nav">
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Store">Store</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Mac">Mac</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/iPad">iPad</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/iPhone">iPhone</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Watch">Watch</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Entertainment">Entertainment</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Accessories">Accessories</a>
                            </li>
                            <li class="nav-item mx-2">
                                <a class="nav-link text-white" asp-area="" asp-page="/Support">Support</a>
                            </li>
                        </ul>
                </div>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" style="border-radius:20px; height:30px; font-size:15px;">
                </form>

                <li class="nav-item mx-2">
                    <a class="nav-link text-white" asp-area="" asp-page="/Account">Karmelie Cute</a>
                </li>
                <a href="/" class="logo-link">
                    <img src="css/images/profile.png" alt="Account" class="navbar-account">
                </a>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Apple_Store - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>